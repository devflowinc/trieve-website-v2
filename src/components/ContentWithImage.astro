---
import { Image } from "astro:assets";

interface Props {
  id: string;
  label?: string;
  headline: string;
  imageAlignment: string;
  contentText: string;
  image: {
    url: string;
    width: number;
    height: number;
    alternativeText: string;
  };
}

const props = Astro.props;

console.log(props);
const { id, label, headline, imageAlignment, image, contentText } = props;

const fullImagePath = `${import.meta.env.STRAPI_URL}${image.url}`;
---

<section id={`content-${id}`} class="mb-32">
  <div class="grid grid-cols-2 gap-8 items-center">
    <div class="flex flex-col p-8">
      <strong class="block my-4">{label}</strong>
      <h2 class="text-4xl font-serif tracking-tighter text-balance">
        {headline}
      </h2>
      <p class="text-lg font-light my-4 text-balance">{contentText}</p>
    </div>
    <div class="flex justify-center items-center p-8">
      <Image
        class="rounded-lg shadow-lg"
        src={fullImagePath}
        alt={headline}
        width={image.width}
        height={image.height}
      />
    </div>
  </div>
</section>
