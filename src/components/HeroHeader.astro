---
import LinkButton from "./shared/LinkButton.astro";

interface Props {
  title: string;
  leadText?: string;
  tagline?: string;
  actions?: ReadonlyArray<{
    label: string;
    href: string;
    newTab: boolean;
    variant: "primary" | "secondary" | "tertiary";
  }>;
}

const { title, leadText, tagline, actions } = Astro.props;
---

<section class="px-4">
  <div class="py-32 text-center flex flex-col items-center gap-4">
    {
      tagline ? (
        <span class="text-purple-700 text-xs uppercase tracking-wid rounded-full bg-white/50 px-4 py-2">
          {tagline}
        </span>
      ) : null
    }
    <h1
      class="text-4xl lg:text-5xl xl:text-6xl font-serif tracking-tighter text-balance"
    >
      {title}
    </h1>
    <p class="text-base lg:text-xl xl:text-2xl font-light text-balance">
      {leadText}
    </p>
    {
      actions ? (
        <div class="flex gap-4 mt-4 lg:mt-8">
          {actions.map((action) => (
            <LinkButton {...action}>{action.label}</LinkButton>
          ))}
        </div>
      ) : null
    }
  </div>
</section>
