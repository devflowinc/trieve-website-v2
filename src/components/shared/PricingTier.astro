---
interface PricingTier {
  name: string;
  price: string | number;
  period: string;
  features: Array<{ text: string }>;
  ctaText: string;
  ctaLink: string;
  popular?: boolean;
  subtitle?: string;
}

interface Props {
  tier: PricingTier;
}

const { tier } = Astro.props;
---

<div
  class="relative flex flex-col rounded-lg border border-gray-200 bg-white p-8 shadow-sm"
>
  {
    tier.popular && (
      <div class="absolute -top-4 -right-4 rounded-full bg-green-600 px-4 py-1 text-sm font-medium text-white">
        Popular
      </div>
    )
  }

  <h3 class="text-xl font-bold text-gray-900">{tier.name}</h3>

  <div class="mt-4 flex items-baseline">
    {
      typeof tier.price === "number" ? (
        <>
          <span class="text-5xl font-extrabold tracking-tight text-gray-900">
            ${tier.price}
          </span>
          {tier.period && (
            <span class="ml-1 text-xl font-semibold text-gray-500">
              {tier.period}
            </span>
          )}
        </>
      ) : (
        <div>
          <span class="inline-flex rounded-lg bg-purple-600 px-4 py-2 text-base font-semibold text-white">
            {tier.price}
          </span>
          {tier.subtitle && (
            <p class="mt-2 text-sm text-gray-500">{tier.subtitle}</p>
          )}
        </div>
      )
    }
  </div>

  <ul class="mt-8 space-y-4 flex-1">
    {
      tier.features.map((feature) => (
        <li class="flex items-start">
          <div class="flex-shrink-0">
            <svg
              class="h-6 w-6 text-purple-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
          </div>
          <span class="ml-3 text-base text-gray-700">{feature.text}</span>
        </li>
      ))
    }
  </ul>

  <a
    href={tier.ctaLink}
    class:list={[
      "mt-8 block rounded-lg px-6 py-3 text-center text-base font-medium",
      {
        "bg-purple-600 text-white hover:bg-purple-700": tier.popular,
        "border border-purple-600 text-purple-600 hover:bg-purple-50":
          !tier.popular,
      },
    ]}
  >
    {tier.ctaText}
  </a>
</div>
