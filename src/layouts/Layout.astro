---
import LayoutHeader from "./shared/LayoutHeader.astro";
import LayoutFooter from "./shared/LayoutFooter.astro";

import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      AI-First infrastructure API for search, recommendations, and
      personalization - Trieve.ai
    </title>
    <meta
      name="description"
      content="Trieve is an AI-powered search infrastructure helping companies build search, recommendations, and personalization features in their products."
    />
  </head>
  <body class="bg-amber-50 text-stone-900">
    <LayoutHeader />
    <main id="main" class="min-h-screen">
      <slot />
    </main>
    <LayoutFooter />
  </body>
</html>
