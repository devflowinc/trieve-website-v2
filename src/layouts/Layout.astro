---
import LayoutHeader from "./shared/LayoutHeader.astro";
import LayoutFooter from "./shared/LayoutFooter.astro";

import background from "../assets/background.svg";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      AI-First infrastructure API for search, recommendations, and
      personalization - Trieve.ai
    </title>
    <meta
      name="description"
      content="Trieve is an AI-powered search infrastructure helping companies build search, recommendations, and personalization features in their products."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Newsreader:ital,opsz,wght@0,6..72,200..800;1,6..72,200..800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-amber-50 text-stone-800">
    <LayoutHeader />
    <main id="main" class="min-h-screen relative z-10">
      <slot />
    </main>
    <img
      src={background.src}
      alt=""
      class="fixed top-0 left-0 w-full h-full z-0 blur-3xl pointer-events-none"
    />
    <LayoutFooter />
  </body>
</html>
