---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { Debug } from "astro:components";

import Layout from "@layouts/Layout.astro";
import { keystatic } from "@lib/keystatic/client";
import SectionHeader from "@components/shared/SectionHeader.astro";

const blogEntries = await keystatic.collections.articles.all();

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/images/articles/**/*.{gif,jpg,jpeg,png,webp,avif}",
  {
    eager: true,
  }
);
---

<Layout contentClass="py-8">
  <SectionHeader
    role="primary"
    title="Trieve blog"
    leadText="Detailed articles about search, discovery, relevance, RAG, and more from the Trieve team."
  />
  <div class="container max-w-5xl mx-auto my-16 px-4">
    {
      blogEntries.map((item) => (
        <div class="my-16 grid grid-cols-1 md:grid-cols-2 md:gap-8 items-center">
          <div>
            {item.entry.coverImage && images[item.entry.coverImage] ? (
              <a
                href={`/blog/${item.slug}`}
                class="block hover:opacity-80 hover:scale-105 transition-transform"
              >
                <Image
                  src={images[item.entry.coverImage].default}
                  alt={item.entry.title}
                  class="rounded-xl shadow-lg"
                />
              </a>
            ) : null}
          </div>
          <div class="flex flex-col gap-4 py-4 px-4 md:px-0">
            <div class="text-sm">
              {item.entry.date ? (
                <time>
                  {new Date(item.entry.date).toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
              ) : null}
              {item.entry.category ? (
                <span>in {item.entry.category}</span>
              ) : null}
            </div>
            <h2 class="text-2xl font-bold">
              <a href={`/blog/${item.slug}`}>{item.entry.title}</a>
            </h2>
            <p class="text-gray-500">{item.entry.summary}</p>
          </div>
        </div>
      ))
    }
  </div>
</Layout>
